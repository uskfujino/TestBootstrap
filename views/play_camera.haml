!!! 5
%html(lang="en")
  %head
    %title Camera
    %link{:rel => 'stylesheet', :href => '../css/bootstrap.css', :type => "text/css"}
    %link{:rel => 'stylesheet', :href => '../css/bootstrap-responsive.css', :type => "text/css"}
    %link{:rel => 'stylesheet', :href => '../css/mydocs.css', :type => "text/css"}
    %script(src='http://js.pusher.com/1.11/pusher.min.js')
    %script(src='../js/jquery.js')
    %script(src='../js/bootstrap.js')
    /%script(src='assets/underscore.js')
    /%script(src='assets/backbone.js')
    %script(src='assets/test_camera.js')
    /%script(src='../js/test_camera.js')
  %body
    = topbar
    .container
      .row
        .span6
          %canvas(id='cameraScreen')
          %br
          %button.btn.btn-primary(style='margin-top: 5px' onclick='cameraApp.mirrorHorizontally()') Reverse
          %button.btn.btn-primary(style='margin-top: 5px' onclick="cameraApp.startBroadcast('#{pusher_key}', '#{channel_id}')") Start Broadcast
          %button.btn.btn-primary(style='margin-top: 5px' onclick="cameraApp.stopBroadcast('#{channel_id}')") Stop Broadcast
          %button.btn.btn-primary(style='margin-top: 5px' onclick='cameraApp.debugger.hello()') Hello
          %button.btn.btn-primary(style='margin-top: 5px' onclick='cameraApp.debugger.sendImage()') Send Image
          /%video(autoplay)
          %video(autoplay style='display:none')
        .span6
          %form.form-horizontal.post(action='/camera' method='post')
            %fieldset
              .control-group
                %label.control-label(for='Channel Name') Channel Name :
                .controls
                  %input.input-xlarge(id='channelName' name='post[channel_name]' type='text')
              .form-actions
                %button.btn.btn-primary(type='submit') Create
    %footer
